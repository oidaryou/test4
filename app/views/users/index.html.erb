<p id="notice"></p>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%= render 'books/list', user: @user, book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Users</h2>
   <table class="table">
    <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
     </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
     <div class="row">
      <tr>
       <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'40x40' %></td>
       <td><%= user.name %></td>
       <td>フォロー数: <%= user.followings.count %></td>
       <td>フォロワー数: <%= user.followers.count %></td>
       <td><%= render 'relationships/follow_button', user: user %></td>
       <td><%= link_to "Show", user_path(user.id) %></td>
       <% end %>
      </tr>
     </div>
    </tbody>
    </table>
  </div>
 </div>
</div>